<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="3dip" android:color="@android:color/holo_blue_light" />
            <gradient android:angle="180" android:endColor="@android:color/holo_blue_light" android:startColor="@android:color/holo_blue_dark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="3dip" android:color="@android:color/holo_blue_light" />
            <gradient android:angle="180" android:endColor="@android:color/holo_blue_light" android:startColor="@android:color/holo_blue_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="2dip" android:color="@android:color/holo_blue_light" />
            <gradient android:angle="270" android:endColor="@android:color/holo_blue_light" android:startColor="@android:color/holo_blue_dark" />
        </shape>
    </item>
</selector>